<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >
    <uses-permission android:name="android.permission.INTERNET" />

    <application

        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icon_oak_tree"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_oak_tree"
        android:supportsRtl="true"
        android:theme="@style/Theme.PalidMarket"
        tools:targetApi="31"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".loginRegister.SplashActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".mainFragments.HomeFragment"
            android:exported="false" />

        <activity
            android:name=".mainFragments.CategoryFragment"
            android:exported="false" />
        <activity
            android:name=".mainFragments.CartFragment"
            android:exported="false" />
        <activity
            android:name=".mainFragments.ProfileFragment"
            android:exported="false" />
        <activity
            android:name=".sideFragments.ProductFragment"
            android:exported="false" />
        <activity
            android:name=".loginRegister.SignInActivity"
            android:exported="false" />
        <activity
            android:name=".loginRegister.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>


</manifest>